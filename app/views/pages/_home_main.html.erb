<%
if params[:parent_id] != nil and params[:parent_id]
	current_cat_id = params[:parent_id].to_i
	category_str_top = make_category_str_main(current_cat_id)
else
	category_str_top = ""
end
%>

<div id="content">
	<!-- Root Category-->
	<div class="root_index">
		<ul>
			<li class="total"><a href=""><img src="images/root/bt_root_total_blue.png" alt="전체분류"></a></li>
			<%= category_str_top %>
		</ul>
	</div>
	<!-- Box Category -->
	<div id="box_category">
		<ul class="list">
			<%@categories.each do |cat| %>
				<li><%= cat.name %><br/>
					<a href="?level=<%= cat.level+1 %>&parent_id=<%= cat.id %>&cat=<%= cat.id %>"><img src="images/icon_category.png" alt="분류명"></a><br/>
					<%if signed_in? %>
						<a href="/mbooks?level=<%= cat.level+1 %>&parent_id=<%= cat.id %>&me=y&store=n&cat=<%=cat.id %>"><img src="images/main/bt_list.png" alt="리스트"></a>
					<%else %>
						<a href="/mbooks?level=<%= cat.level+1 %>&parent_id=<%= cat.id %>&me=n&store=y&cat=<%=cat.id %>"><img src="images/main/bt_list.png" alt="리스트"></a>
					<%end %>
				</li>
			<%end %>
		</ul>
	</div>
</div>