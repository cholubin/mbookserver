<div id="feature_wrapper">
	<h2>회원가입</h2>
		<p1>웹탑프린트샵 회원가입 페이지입니다.</p1><br>
		<% if ! flash[:notice].nil? %>
			<span class="error_message_small"><%= flash[:notice].to_s %></span>
		<% end %>
	</div>
<!-- <copy> --><br>
	<div id="line_bottom1"></div>
	<% form_for(@user) do |f| %>
	  <!-- <%= f.error_messages %> -->
			<table>
				<tr>
					<td>
						<table class="register_table">
							<tr>
								<td class="register_td" width="150"><img src="/images/register/check.jpg">희망 아이디</td>
								<td class="register_td"  width="100">
									<input class="field_1" maxlength="20" name="user[userid]" id="userid" type="text">
								</td>
								<td class="register_td" align="left" width="370">
									<%= javascript_include_tag :defaults %>	
									<%= javascript_include_tag "basic_tools" %>	
									<%= image_tag '/images/register/overlap_check.jpg', :align => 'absmiddle', 
									:onmouseover => "this.style.cursor='hand';",
									:onclick => "if ($('#userid').val()=='') {
													alert('아이디를 입력하세요!');
													$('#userid').focus();
													return false; 
													}
												else{
													if (input_check($('#userid').val()) == false){
														alert('아이디는 영문만 가능합니다!');
														$('#userid').val('');
														$('#userid').focus();
														return false;
													}
														
													}" + remote_function(:url => { :controller => 'users', :action => :id_check },
									:with => "'user_id=' + $('#userid').val()")
									%>
									&nbsp;&nbsp;<span id="id_check" class="error_message_small">아이디 중복확인 해주세요!</span>
									

									
								</td>
							</tr>
							<tr>
							<td class="register_td" width="150"><img src="/images/register/check.jpg">이름</td>
							<td class="register_td"  width="570" colspan="2">
								<input class="field_1" maxlength="10" name="user[name]" type="text"></td>
							</tr>							
							<tr>
							<td class="register_td" ><img src="/images/register/check.jpg">비밀번호</td>
							<td class="register_td"  width="570"  colspan="2"><input class="field_1" type="password" value="" name="user[password]"/></td>
							</tr>
							<tr>
							<td class="register_td" ><img src="/images/register/check.jpg">비밀번호 재확인</td>
							<td class="register_td"  width="570"  colspan="2">
								<input class="field_1" type="password" value="" name="user[re-password]"/></td>
							</tr>
							
							<tr>
							<td class="register_td" ><img src="/images/register/check.jpg">이메일 주소</td>
							<td class="register_td" width="570"  colspan="2">
								<input class="field_1" type="text" value="" name="user[email]"/></td>
							</tr>
							
							<tr>
							<td class="register_td" width="160"><img src="/images/mypage/check.jpg">전화</td>
							<td class="register_td" width="570" colspan="2"><input class="field_1" type="text" name="user[tel]"/></td>
							</tr>
							<tr>
							<td class="register_td" width="160"><img src="/images/mypage/check.jpg">모바일</td>
							<td class="register_td" width="570" colspan="2"><input class="field_1" type="text" name="user[mobile]"/></td>
							</tr>
							
							<tr>
							<td class="register_td" width="160"><img src="/images/mypage/check.jpg">소속합회</td>
							<td class="register_td" width="570" colspan="2">
								<select name="user[group1]">
									<option value="연합회(기관)">연합회(기관)</option>
									<option value="동중한합회">동중한합회</option>
									<option value="서중한합회">서중한합회</option>
									<option value="충청합회">충청합회</option>
									<option value="영남합회">영남합회</option>
									<option value="호남합회">호남합회</option>
									<option value="기타">기　　타</option>
								</select></td>
							</tr>
							
							<tr>
							<td class="register_td" width="160"><img src="/images/mypage/check.jpg">소속교회</td>
							<td class="register_td" width="570" colspan="2"><input class="field_1" type="text" name="user[group2]"/></td>
							</tr>
							
							<tr>
							<td class="register_td" width="160"><img src="/images/mypage/check.jpg">우편물 수신장소</td>
							<td class="register_td" width="570" colspan="2">교회<input type="radio" value="교회" name="user[post_spot]"/> 자택<input type="radio" value="자택" name="user[post_spot]"/> 직접수령<input type="radio" value="직접수령" name="user[post_spot]" /></td>
							</tr>
							
							<tr>
							<td class="register_td" width="160"><img src="/images/mypage/check.jpg">우편번호</td>
							<td class="register_td" width="570" colspan="2"><input class="field_1" type="text" name="user[zip_code]"/></td>
							</tr>
							
							<tr>
							<td class="register_td" width="160"><img src="/images/mypage/check.jpg">주소</td>
							<td class="register_td" width="570" colspan="2">
									<input style="width:400px;" type="text" name="user[addr1]"/><br>
									<input style="width:400px;" type="text" name="user[addr2]"/>
								</td>
							</tr>
						</table>
						<!-- <템플릿 정보 반복 구간입니다.> -->
					</td>
				</tr>
			</table>
		<!-- <템플릿 정보창 한줄 반복 구간입니다. -->

	
	<div id="line_bottom1"></div>
	<br>			

	
	<div id="button_wrapper">
			<%= image_submit_tag("/images/board/submit.jpg") %>
	</div>
	<% end %>
			
